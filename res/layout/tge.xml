    <!-- android:overScrollMode="never" -->
    <!-- android:paddingLeft="40dp" -->
    <!-- android:paddingRight="40dp" -->
    <!-- android:scrollbars="none" -->
    <!-- android:scrollingCache="true" /> -->

    <ListView
        android:id="@+id/list"
        android:layout_width="220.00dip"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:background="#ffe4e4e4"
        android:cacheColorHint="#e4e4e4"
        android:choiceMode="singleChoice"
        android:divider="@drawable/tlc_dv"
        android:dividerHeight="1.00dp"
        android:duplicateParentState="true"
        android:fitsSystemWindows="true"
        android:listSelector="@drawable/side_drawer_list_selector"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:scrollbars="none"
        android:scrollingCache="true"
        android:visible="false" />

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="320.00dip"
        android:layout_height="fill_parent"
        android:layout_gravity="left|start"
        android:background="#ffe4e4e4"
        android:cacheColorHint="#e4e4e4"
        android:choiceMode="singleChoice"
        android:divider="@drawable/tlc_dv"
        android:dividerHeight="1.10dp"
        android:duplicateParentState="true"
        android:fitsSystemWindows="true"
        android:listSelector="@drawable/side_drawer_list_selector"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:scrollbars="none"
        android:scrollingCache="true" />

</android.support.v4.widget.DrawerLayout>